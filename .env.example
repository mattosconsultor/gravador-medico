# ========================================
# SUPABASE - Banco de Dados e Autenticação
# ========================================
# Obtenha em: https://app.supabase.com/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://seu-projeto.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=sua-anon-key-aqui
SUPABASE_SERVICE_ROLE_KEY=sua-service-role-key-aqui

# ========================================
# JWT - Autenticação
# ========================================
# Gere uma chave secreta forte (ex: openssl rand -base64 32)

JWT_SECRET=sua-chave-secreta-super-forte-aqui

# ========================================
# APPMAX - Checkout e Webhooks
# ========================================
# Link do checkout: https://gravadormedico.carrinho.app/one-checkout/ocudf/32880073
# Configure o webhook em: https://app.appmax.com.br

# URL da API da Appmax (PRODUÇÃO)
APPMAX_API_URL=https://appmax.com.br

# Token de autenticação da API (obter no painel Appmax → Configurações → API)
APPMAX_API_TOKEN=seu-token-appmax-aqui

# ID do produto principal (do link de checkout acima)
APPMAX_PRODUCT_ID=32880073

# IDs dos produtos de Order Bump
APPMAX_ORDER_BUMP_1_ID=32989468
APPMAX_ORDER_BUMP_2_ID=32989503
APPMAX_ORDER_BUMP_3_ID=32989520

# URL do Webhook (já configurado)
APPMAX_WEBHOOK_URL=https://www.gravadormedico.com.br/api/webhook/appmax

# Secret para validar webhooks da Appmax
APPMAX_WEBHOOK_SECRET=sua-chave-webhook-appmax

